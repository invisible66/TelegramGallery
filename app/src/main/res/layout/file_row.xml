<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liner1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_multisoft_bg"
    android:clickable="true"
    android:layout_margin="2dp"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/fileLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_added_file"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fileLogo"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:text="@string/addNumber"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/AddedFileTextStyle" />

    <ImageView
        android:id="@+id/fileDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>